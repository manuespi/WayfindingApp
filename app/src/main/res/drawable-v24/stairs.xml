<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="3dp"
                    android:color="#0E1875" /> <!-- Adjust color as needed -->
            </shape>
        </rotate>
    </item>
    <item android:gravity="center">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <stroke
                    android:width="3dp"
                    android:color="#0E1875" /> <!-- Adjust color as needed -->
            </shape>
        </rotate>
    </item>
</layer-list>
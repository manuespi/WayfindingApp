<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapList_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="#E8E5E5"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mapFile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="Map name"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/playMap_button"
            android:layout_marginStart="105dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:text="Play"
            app:icon="@android:drawable/ic_media_play"
            android:scaleType="fitCenter"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <Button
            android:id="@+id/editMap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/playMap_button"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:text="Edit"
            app:icon="@android:drawable/ic_menu_edit"
            android:scaleType="fitCenter"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <Button
            android:id="@+id/deleteMap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editMap_button"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:text="Delete"
            app:icon="@android:drawable/ic_menu_delete"
            android:scaleType="fitCenter"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textSize="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roomList_cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="#E8E5E5"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="Room name"
                android:textColor="@color/black"
                android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_name"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nElems_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="14dp"
                android:text="elements:"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nElems_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/nElems_textView"
                android:text="nElems"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

        <Button
            android:id="@+id/editRoom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="142dp"
            android:text="Edit"
            app:icon="@android:drawable/ic_menu_edit" />

        <Button
            android:id="@+id/deleteRoom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:text="Delete"
            app:icon="@android:drawable/ic_menu_delete" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
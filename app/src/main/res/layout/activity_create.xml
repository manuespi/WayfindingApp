<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <!--<data>

                <variable
                    name="room"
                    type="com.example.wayfinding.mapComponents.Room" />

        </data>-->

        <LinearLayout
            android:id="@+id/createLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".CreateActivity">


                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <!-- Room ImageView -->
                                <ImageView
                                    android:id="@+id/roomView"
                                    android:layout_width="400px"
                                    android:layout_height="400px"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/room"
                                    android:gravity="center" />

                                <!-- Grid Overlay -->
                                <View
                                    android:id="@+id/gridOverlay"
                                    android:layout_width="400px"
                                    android:layout_height="400px"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/grid_background" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/currentRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="162dp"
                            android:layout_marginTop="137dp"
                            android:text="Current room" />

                        <Button
                            android:id="@+id/resize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RESIZE" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08">

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                                <Button
                                    android:id="@+id/newDoor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Door"
                                    />

                                <Button
                                    android:id="@+id/newStairs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stairs"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    />

                                <Button
                                    android:id="@+id/newElevator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Elevator" />

                        </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.54">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                                <!-- First panel -->
                                <RelativeLayout
                                    android:id="@+id/panel1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">



                                        <View
                                            android:id="@+id/divider2"
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentRight="true"
                                            android:background="?android:attr/listDivider" />

                                        <TextView
                                            android:id="@+id/coordinatesPrompt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="-56dp"
                                            android:layout_marginBottom="369dp"
                                            android:text="Give the element an x and y coordinate:"
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/coordXPrompt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="-36dp"
                                            android:layout_marginBottom="333dp"
                                            android:text="X:"
                                            android:visibility="invisible" />

                                        <EditText
                                            android:id="@+id/coordXWidth"
                                            android:layout_width="40dp"
                                            android:layout_height="35dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="59dp"
                                            android:layout_marginBottom="325dp"
                                            android:background="@drawable/custom_wc_checkbox"
                                            android:inputType="number"
                                            android:text=""
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/coordYPrompt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="63dp"
                                            android:layout_marginBottom="334dp"
                                            android:text="Y:"
                                            android:visibility="invisible" />

                                        <EditText
                                            android:id="@+id/coordYLength"
                                            android:layout_width="40dp"
                                            android:layout_height="35dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="156dp"
                                            android:layout_marginBottom="324dp"
                                            android:background="@drawable/custom_wc_checkbox"
                                            android:inputType="number"
                                            android:text=""
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/spinnerPrompt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="-50dp"
                                            android:layout_marginBottom="287dp"
                                            android:text="Pick a wall"
                                            android:visibility="invisible"/>

                                        <Spinner
                                            android:id="@+id/spinner"
                                            android:layout_width="107dp"
                                            android:layout_height="35dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="88dp"
                                            android:layout_marginBottom="277dp"
                                            android:background="@drawable/custom_spinner"
                                            android:dropDownVerticalOffset="20dp"
                                            android:gravity="center"
                                            android:spinnerMode="dropdown"
                                            android:textSize="18dp"
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/wheelchairPrompt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="-46dp"
                                            android:layout_marginBottom="221dp"
                                            android:text="Wheelchair friendly"
                                            android:visibility="invisible"/>

                                        <CheckBox
                                            android:id="@+id/wcCheckBox"
                                            android:layout_width="40dp"
                                            android:layout_height="35dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="155dp"
                                            android:layout_marginBottom="210dp"
                                            android:background="@drawable/custom_wc_checkbox"
                                            android:text=""
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/capacityPrompt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="-46dp"
                                            android:layout_marginBottom="221dp"
                                            android:text="Maximum capacity"
                                            android:visibility="invisible"/>

                                        <EditText
                                            android:id="@+id/capacityInput"
                                            android:layout_width="40dp"
                                            android:layout_height="35dp"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="154dp"
                                            android:layout_marginBottom="209dp"
                                            android:background="@drawable/custom_wc_checkbox"
                                            android:inputType="number"
                                            android:text=""
                                            android:visibility="invisible" />

                                        <Button
                                            android:id="@+id/addElement_button"
                                            android:layout_width="65dp"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentLeft="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginLeft="200px"
                                            android:layout_marginBottom="200px"
                                            android:text="Add" />

                                        <TextView
                                            android:id="@+id/roomElements"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/addElement_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginBottom="360px"
                                            android:text="Room elements" />

                                </RelativeLayout>

                                <!-- Second panel -->
                                <RelativeLayout
                                    android:id="@+id/panel2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">


                                        <Button
                                            android:id="@+id/newRoom_button"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginEnd="200px"
                                            android:layout_marginBottom="200px"
                                            android:text="New room" />


                                        <TextView
                                            android:id="@+id/rooms"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignStart="@+id/newRoom_button"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginEnd="120px"
                                            android:layout_marginBottom="360px"
                                            android:text="Rooms" />
                                </RelativeLayout>

                        </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08">


                        <Button
                            android:id="@+id/mainMenu_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="100px"
                            android:layout_marginBottom="20px"
                            android:text="Main menu" />

                        <Button
                            android:id="@+id/save_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="100px"
                            android:layout_marginBottom="20px"
                            android:text="Save" />

                </RelativeLayout>

        </LinearLayout>
</layout>
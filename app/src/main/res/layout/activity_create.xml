<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity">

    <RelativeLayout
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.example.wayfinding.MapCanvas
            android:id="@+id/mapCanvas"
            android:name=".MapCanvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:exported="false" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/roomWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:hint="y"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/roomLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:hint="x"
            android:minWidth="48dp"
            android:minHeight="48dp" />
<!--            android:onClick="setRoomLength()" -->


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/mainMenu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100px"
            android:layout_marginBottom="20px"
            android:text="Main menu" />

        <Button
            android:id="@+id/show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100px"
            android:layout_marginBottom="20px"
            android:text="View all" />

        <Button
            android:id="@+id/newElement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            android:text="New element" />

        <Button
            android:id="@+id/addElement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="200px"
            android:layout_marginLeft="200px"
            android:text="Add elem" />

        <Button
            android:id="@+id/newRoom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="200px"
            android:layout_marginRight="200px"
            android:text="New room" />

        <TextView
            android:id="@+id/roomElements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room elements"
            android:layout_marginBottom="360px"
            android:layout_alignLeft="@+id/addElement_button"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:layout_marginBottom="360px"
            android:layout_marginRight="120px"
            android:layout_alignLeft="@+id/newRoom_button"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/currentRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current room"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="130px"
            android:layout_marginLeft="40px"/>


    </RelativeLayout>


</LinearLayout>
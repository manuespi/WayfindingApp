<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="room"
            type="mapComponents.Room" />

    </data>

    <LinearLayout
        android:id="@+id/createLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity">


    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/roomView"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_centerInParent="true"
            android:background="@drawable/room"
            android:gravity="center"
            />

        <com.example.wayfinding.MapCanvas
            android:id="@+id/mapCanvas"
            android:name=".MapCanvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:exported="false" />


        <Button
            android:id="@+id/resize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESIZE" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/mainMenu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100px"
            android:layout_marginBottom="20px"
            android:text="Main menu" />

        <Button
            android:id="@+id/show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100px"
            android:layout_marginBottom="20px"
            android:text="View all" />


        <Button
            android:id="@+id/addElement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="200px"
            android:layout_marginLeft="200px"
            android:text="Add elem" />

        <Button
            android:id="@+id/newRoom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="200px"
            android:layout_marginEnd="200px"
            android:text="New room" />

        <TextView
            android:id="@+id/roomElements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room elements"
            android:layout_marginBottom="360px"
            android:layout_alignStart="@+id/addElement_button"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:layout_marginBottom="360px"
            android:layout_marginEnd="120px"
            android:layout_alignStart="@+id/newRoom_button"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/currentRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="121dp"
            android:text="Current room" />

        <Button
            android:id="@+id/newDoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="200px"
            android:layout_marginRight="116dp"
            android:layout_marginBottom="273dp"
            android:text="Door" />


    </RelativeLayout>


    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity">

    <RelativeLayout
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/roomView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/room"
            android:gravity="center"
            android:text="@string/room"
            android:textAlignment="center"
            android:textColor="#311B92" />

        <com.example.wayfinding.MapCanvas
            android:id="@+id/mapCanvas"
            android:name=".MapCanvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:exported="false" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/roomY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/roomView"
            android:layout_alignBottom="@+id/roomView"
            android:layout_marginStart="50dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="26dp"
            android:layout_toStartOf="@+id/roomView"
            android:gravity="center_horizontal"
            android:hint="@string/y"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textAlignment="center"
            tools:ignore="RelativeOverlap" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/roomX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_above="@+id/roomView"
            android:layout_alignStart="@+id/roomView"
            android:layout_alignEnd="@+id/roomView"
            android:layout_marginStart="76dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/x"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textAlignment="center" />


        <!--            android:onClick="setRoomLength()" -->


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/mainMenu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100px"
            android:layout_marginBottom="20px"
            android:text="Main menu" />

        <Button
            android:id="@+id/show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100px"
            android:layout_marginBottom="20px"
            android:text="View all" />

        <Button
            android:id="@+id/newElement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            android:text="New element" />

        <Button
            android:id="@+id/addElement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="200px"
            android:layout_marginLeft="200px"
            android:text="Add elem" />

        <Button
            android:id="@+id/newRoom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="200px"
            android:layout_marginEnd="200px"
            android:text="New room" />

        <TextView
            android:id="@+id/roomElements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room elements"
            android:layout_marginBottom="360px"
            android:layout_alignStart="@+id/addElement_button"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:layout_marginBottom="360px"
            android:layout_marginEnd="120px"
            android:layout_alignStart="@+id/newRoom_button"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/currentRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current room"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="130px"
            android:layout_marginStart="40px"/>


    </RelativeLayout>


</LinearLayout>
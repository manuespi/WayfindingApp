<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="room"
            type="mapComponents.Room" />

    </data>

    <LinearLayout
        android:id="@+id/createLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CreateActivity">


        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Room ImageView -->
                <ImageView
                    android:id="@+id/roomView"
                    android:layout_width="400px"
                    android:layout_height="400px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/room"
                    android:gravity="center" />

                <!-- Grid Overlay -->
                <View
                    android:id="@+id/gridOverlay"
                    android:layout_width="400px"
                    android:layout_height="400px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/grid_background" />

                <TextView
                    android:id="@+id/currentRoom"
                    android:layout_width="72dp"
                    android:layout_height="57dp"
                    android:layout_alignStart="@+id/roomView"
                    android:layout_alignTop="@+id/roomView"
                    android:layout_alignEnd="@+id/roomView"
                    android:layout_alignBottom="@+id/roomView"
                    android:gravity="center"
                    android:text="hi"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </RelativeLayout>


            <Button
                android:id="@+id/resize"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:text="EDIT" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/newDoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Door"
                    />

                <Button
                    android:id="@+id/newStairs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stairs"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    />

                <Button
                    android:id="@+id/newElevator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elevator" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.54">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- First panel -->
                <RelativeLayout
                    android:id="@+id/panel1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">



                    <View
                        android:id="@+id/divider2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/coordYLength"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="151dp"
                        android:layout_marginBottom="279dp"
                        android:background="@drawable/custom_wc_checkbox"
                        android:inputType="number"
                        android:text=""
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/capacityPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-51dp"
                        android:layout_marginBottom="177dp"
                        android:text="Maximum capacity"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/capacityInput"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="149dp"
                        android:layout_marginBottom="164dp"
                        android:background="@drawable/custom_wc_checkbox"
                        android:inputType="number"
                        android:text=""
                        android:visibility="invisible" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="107dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="83dp"
                        android:layout_marginBottom="232dp"
                        android:background="@drawable/custom_spinner"
                        android:dropDownVerticalOffset="20dp"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:textSize="18dp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/coordXWidth"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="54dp"
                        android:layout_marginBottom="280dp"
                        android:background="@drawable/custom_wc_checkbox"
                        android:inputType="number"
                        android:text=""
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/coordXPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-41dp"
                        android:layout_marginBottom="289dp"
                        android:text="X:"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/coordinatesPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-60dp"
                        android:layout_marginBottom="324dp"
                        android:text="Give the element an x and y coordinate:"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/coordYPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="58dp"
                        android:layout_marginBottom="290dp"
                        android:text="Y:"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/spinnerPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-54dp"
                        android:layout_marginBottom="243dp"
                        android:text="Pick a wall"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/wcCheckBox"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="148dp"
                        android:layout_marginBottom="165dp"
                        android:background="@drawable/custom_wc_checkbox"
                        android:text=""
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/wheelchairPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-53dp"
                        android:layout_marginBottom="178dp"
                        android:text="Wheelchair friendly"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/roomElements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/addElement_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="81dp"
                        android:text="Room elements" />

                    <Button
                        android:id="@+id/addElement_button"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="76dp"
                        android:layout_marginBottom="25dp"
                        android:text="Add" />

                </RelativeLayout>

                <!-- Second panel -->
                <RelativeLayout
                    android:id="@+id/panel2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <Button
                        android:id="@+id/newRoom_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="200px"
                        android:layout_marginRight="77dp"
                        android:layout_marginBottom="25dp"
                        android:text="New room" />

                    <TextView
                        android:id="@+id/rooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/newRoom_button"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="120px"
                        android:layout_marginBottom="82dp"
                        android:text="Rooms" />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08">


            <Button
                android:id="@+id/mainMenu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="100px"
                android:layout_marginBottom="20px"
                android:text="Main menu" />

            <Button
                android:id="@+id/show_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="100px"
                android:layout_marginBottom="20px"
                android:text="View all" />

        </RelativeLayout>

    </LinearLayout>
</layout>